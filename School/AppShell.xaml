<Shell x:Class="School.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:School"
       xmlns:Views="clr-namespace:School.Views"
       Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        <ShellContent Title="Students" ContentTemplate="{DataTemplate Views:StudentsPage}" Route="MainPage" />
        <ShellContent Title="Teachers" ContentTemplate="{DataTemplate Views:TeachesPage}" Route="MainPage" />
        <ShellContent Title="Activities" ContentTemplate="{DataTemplate Views:ActivitesPage}" Route="MainPage" />
        <ShellContent Title="Evaluations" ContentTemplate="{DataTemplate Views:EvaluationsPage}" Route="MainPage" />
        <ShellContent Title="Bulletins" ContentTemplate="{DataTemplate Views:BulletinPage}" Route="MainPage" />
    </TabBar>
</Shell>
